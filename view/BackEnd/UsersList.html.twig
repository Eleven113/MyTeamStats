{% extends "layout.html.twig" %}

{% block head %}
    <title>Gestion des utilisateurs - MyTeamStats</title>
{% endblock %}

{% block content %}

    {% if session.user_status >= 1 %}
        <div id="add_player" class="col-1 m-4 border border-primary rounded-lg myborder">
            <a href="index.php?action=createplayer">
                <i class="fas fa-user-plus"></i>&nbsp;Créér un joueur
            </a>
        </div>
    {% endif %}

    <div class="table-responsive">
        <table class="table table table-bordered table-striped text-center">
            <caption class="col-12 text-center">
                <h4>Liste des utilisateurs</h4>
            </caption>
            <thead>
            <tr>
                <th id="table_surname">Nom</th>
                <th id="table_name">Prénom</th>
                <th id="table_birthdate">Mail</th>
                <th id="table_category">Statut</th>
                <th id="table_category">Options</th>
            </tr>
            </thead>
            <tbody>
            {%   for user in userListObj %}

                <tr>
                    <td>{{user.lastname}}</td>
                    <td>{{user.firstname}}</td>
                    <td>{{user.mail}}</td>
                    <td>{{user.status}}</td>
                    <td class="d-flex flex-row justify-content-between">
                        <div><a href="index.php?action=modifypuser&id={{ user.userid }}"><i class="fas fa-user-edit"></i></a></div>
                        <div><a href="index.php?action=deleteplayer&id={{ user.userid }}"><i class="fas fa-user-times"></i></a></div>
                    </td>
                </tr>

            {% endfor %}
            </tbody>
        </table>
        {% if sessionUser == 0 %}
            {{ sessionUser }}
            <span>Pas connecté</span>
        {% else %}
            <span>Connecté</span>
        {% endif %}
    </div>

{% endblock %}

