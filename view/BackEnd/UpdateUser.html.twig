{% extends "layout.html.twig" %}

{% block head %}
    <title>Modifier l'utilisateur - MyTeamStats</title>
{% endblock %}

{% block content %}

    {% if session.user_status >= 4 %}
        <div id="updateuser_form" class="d-flex flex-column justify-content-center align-items-center mt-4">
            <form id="updateuser-form" class="col-lg-6" action="/UpdateUser/{{ user.userid }}"  method="post" enctype="multipart/form-data">
                <h3>Modifier l'utilisateur</h3>
                <div class="form-group">
                    <label for="user_upd_lastname" class="form_label">Nom</label>
                    <input id="user_upd_lastname" type="text" name="lastname" class="form-control" value="{{ user.lastname }}" required>
                </div>
                <div class="form-group">
                    <label for="user_upd_firstname" class="form_label">Prénom</label>
                    <input id="user_upd_firstname" type="text" name="firstname" class="form-control" value="{{ user.firstname }}" required>
                </div>
                <div class="form-group">
                    <label for="user_upd_mail" class="form_label">Mail</label>
                    <input id="user_upd_mail" type="mail" name="mail" value="{{ user.mail }}" class="form-control" required>
                </div>
                <div class="form-group">
                    <label for="user_upd_status" class="form_label">Statut    </label>
                    <select id="user_upd_status" name="status" class="form-control" required>
                        <option value="1" {% if user.status == 1 %}selected{% endif %}>Visiteur</option>
                        <option value="2" {% if user.status == 2 %}selected{% endif %}>Joueur</option>
                        <option value="3" {% if user.status == 3 %}selected{% endif %}>Coach/Dirigeant</option>
                        <option value="4" {% if user.status == 4 %}selected{% endif %} disabled>Administrateur</option>
                    </select>
                </div>

                <button type="submit" class="mt-4 btn btn-primary"><i class="fas fa-check-circle"></i>&nbsp;&nbsp;Envoyer</button>
            </form>
        </div>
    {% else %}
        <span>Vous n'êtes pas autorisé à afficher cette page</span>
    {% endif %}

{% endblock %}