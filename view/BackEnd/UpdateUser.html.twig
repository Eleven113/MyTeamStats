{% extends "layout.html.twig" %}

{% block head %}
    <title>Modifier l'utilisateur - MyTeamStats</title>
{% endblock %}

{% block content %}

    {% if session.user_status >= 4 %}
        <div id="updateuser_form" class="d-flex flex-column justify-content-center align-items-center mt-4">
            <form id="updateuser-form" class="col-lg-6" action="/MyTeamStats/UpdateUser/{{ user.userid }}"  method="post" enctype="multipart/form-data">
                <legend>Modifier l'utilisateur</legend>
                <div class="form-group">
                    <label for="text" class="form_label">Nom</label>
                    <input id="text" type="text" name="lastname" class="form-control" value="{{ user.lastname }}" required>
                </div>
                <div class="form-group">
                    <label for="text" class="form_label">Prénom</label>
                    <input id="text" type="text" name="firstname" class="form-control" value="{{ user.firstname }}" required>
                </div>
                <div class="form-group">
                    <label for="text" class="form_label">Mail</label>
                    <input id="text" type="mail" name="mail" value="{{ user.mail }}" class="form-control" required>
                </div>
                <div class="form-group">
                    <label for="text" class="form_label">Statut    </label>
                    <select name="status" class="form-control" required>
                        <option value="1">Visiteur</option>
                        <option value="2">Joueur</option>
                        <option value="3">Coach/Dirigeant</option>
                        <option value="4" disabled>Administrateur</option>
                    </select>
                </div>

                <button type="submit" class="mt-4 btn btn-primary"><i class="fas fa-check-circle"></i>&nbsp;&nbsp;Envoyer</button>
            </form>
        </div>
    {% else %}
        <span>Vous n'êtes pas autorisé à afficher cette page</span>
    {% endif %}

{% endblock %}