{% extends "layout.html.twig" %}

{% block head %}
    <title>Composition d'équipe - MyTeamStats</title>
{% endblock %}

{% block content %}
    <div class="d-flex flex-column align-items-center">
        <h3 class="mt-4 mb-4">Composition d'équipe</h3>

        {% if playersList is null %}

            <div id="no_compo">
                Il n'y a pas encore de composition d'équipe pour ce match
            </div>

            <button id="add_compo" class="btn btn-primary mt-4 add-btn">
                <a href="/MyTeamStats/CreateComposition/{{ id }}"  class="link font-weight-bold">
                    <i class="fas fa-user-plus"></i>&nbsp;Créér la compo
                </a>
            </button>

        {% else %}

            <h5 class="mb-2">Joueurs convoqués le match :</h5>
            <ul>
                {%  for player in playersList %}
                    <li>{{ player.firstname }}  {{ player.lastname }}</li>
                {% endfor %}
            </ul>
            <div class="d-flex flex-row col-10 justify-content-between">
                <button id="modify_compo" class="btn btn-primary mt-4 add-btn">
                    <a href="/MyTeamStats/ModifyComposition/{{ id }}"  class="link font-weight-bold">
                        <i class="fas fa-pen"></i>&nbsp;Modifier
                    </a>
                </button>
                <button id="delete_compo" class="btn btn-primary mt-4 add-btn">
                    <a href="/MyTeamStats/DeleteComposition/{{ id }}"  class="link font-weight-bold">
                        <i class="fas fa-trash-alt"></i>&nbsp;Supprimer
                    </a>
                </button>
                <button id="match_stats" class="btn btn-primary mt-4 add-btn">
                    <a href="/MyTeamStats/MatchStats/{{ id }}"  class="link font-weight-bold">
                        <i class="fas fa-clipboard-list"></i>&nbsp;Mode Stats
                    </a>
                </button>
            </div>
        {% endif %}
    </div>
    <div class="mt-4">
        <a href="/MyTeamsStats/MatchsList"><i class="fa fa-share fa-flip-horizontal" aria-hidden="true"></i>&nbsp;&nbsp;&nbsp;Retour à la liste des matchs</a>
    </div>
{% endblock %}