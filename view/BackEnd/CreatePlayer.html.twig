{% extends "layout.html.twig" %}

{% block head %}
    <title>Créér un joueur - MyTeamStats</title>
{% endblock %}

{% block content %}

    <div id="createplayer_form" class="d-flex flex-column justify-content-center align-items-center">
        <form id="createaplayer-form" class="col-lg-6" action="/AddPlayer"  method="post" enctype="multipart/form-data">
            <legend>Créér un joueur</legend>
            <div class="form-group">
                <label for="text" class="form_label">Nom</label>
                <input id="text" type="text" name="lastname" class="form-control set-height" required>
            </div>
            <div class="form-group">
                <label for="text" class="form_label">Prénom</label>
                <input id="text" type="text" name="firstname" class="form-control" required>
            </div>
            <div class="form-group">
                <label for="text" class="form_label">N° Licence</label>
                <input id="text" type="number" name="licencenum" class="form-control" required>
            </div>
            <div class="form-group">
                <label for="text" class="form_label">Licence active ?</label>
                <select name="activelicence" class="form-control">
                    <option value="1">Oui</option>
                    <option value="0">Non</option>
                </select>
            </div>
            <div class="form-group">
                <label for="text" class="form_label">Date de naissance</label>
                <input id="text" type="date" name="birthdate" class="form-control" required>
            </div>
            <div class="form-group">
                <label for="text" class="form_label">Ajouter une photo</label>
                <input id="text" type="file" name="photo" class="form-control">
            </div>
            <div class="form-group">
                <label for="text" class="form_label">Poste</label>
                <select name="poste" class="form-control">
                    <option value="Attaquant">Attaquant</option>
                    <option value="Milieu">Milieu</option>
                    <option value="Défenseur">Défenseur</option>
                    <option value="Gardien">Gardien</option>
                </select>
            </div>
            <div class="form-group">
                <label for="text" class="form_label">Adresse</label>
                <input id="text" type="text" name="address" class="form-control" required>
            </div>
            <div class="form-group">
                <label for="text" class="form_label">Téléphone</label>
                <input id="text" type="number" name="phonenum" class="form-control">
            </div>
            <div class="form-group">
                <label for="text" class="form_label">Mail</label>
                <input id="text" type="mail" name="mail" class="form-control" required>
            </div>
            <button type="submit" class="mt-4 btn btn-primary"><i class="fas fa-check-circle"></i>&nbsp;&nbsp;Envoyer</button>
        </form>
    </div>


{% endblock %}