{% extends "layout.html.twig" %}

{% block head %}
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta property="og:title" content="MyTeamStats" />
    <meta property="og:type" content="Website" />
    <meta property="og:url" content="http://www.thibaut-minard.fr/MyTeamStats/" />
    <meta property="og:image" content="https://res.cloudinary.com/marthyte/image/upload/v1584623500/v2_vnydsk.png" />
    <meta property="og:description" content="Page d'accueil">
    <title>Accueil - MyTeamStats</title>
{% endblock %}

{% block content %}

<div class="row mt-5">
    <div class="row offset-1 col-10">
        <div class="col-xs-10 col-sm-5">
            <div class="embed-responsive embed-responsive-1by1 text-center align-middle">
                <div class="embed-responsive-item bg-primary rounded-lg menu_content">
                    <a href="/MyTeamStats/PlayersList" class="link">
                        <div class="menu_option">
                            <span class="menu_option-ico"><i class="fas fa-users"></i></span><br/>
                            <span class="menu_option-txt">Effectif</span>
                        </div>              
                    </a>   
                </div>
            </div>
        </div>     
        <div class="col-xs-10 offset-sm-2 col-sm-5 marge-menu">
            <div class="embed-responsive embed-responsive-1by1 text-center align-middle">
                <div class="embed-responsive-item bg-primary rounded-lg menu_content">
                    <a href="/MyTeamStats/MatchsList" class="link">
                        <div class="menu_option">
                                <span class="menu_option-ico"><i class="far fa-futbol"></i></span><br/>
                                <span class="menu_option-txt">Matchs</span>
                        </div>    
                    </a>                    
                </div>
            </div>
        </div>
    </div>    
</div>

<div class="row mt-5 mb-5">
    <div class="row offset-1 justify-content-center col-10">
        <div class="col-xs-10 col-sm-5">
            <div class="embed-responsive embed-responsive-1by1 text-center align-middle">
                <div class="embed-responsive-item bg-primary rounded-lg menu_content">
                    <a href="/MyTeamStats/Club" class="link">
                        <div class="menu_option">
                            <span class="menu_option-ico"><i class="fas fa-clipboard-list"></i></span><br/>
                            <span class="menu_option-txt">Club</span>
                        </div>     
                    </a>             
                </div>
            </div>
        </div>
        {% if session.user_status >= 3 %}
            <div class="col-xs-10 offset-sm-2 col-sm-5 marge-menu">
                <div class="embed-responsive embed-responsive-1by1 text-center align-middle">
                    <div class="embed-responsive-item bg-primary rounded-lg menu_content">
                        <a href="/MyTeamStats/Admin" class="link">
                            <div class="menu_option">
                                <span class="menu_option-ico"><i class="fas fa-cog"></i></span><br/>
                                <span class="menu_option-txt">Gestion</span>
                            </div>
                        </a>
                    </div>
                </div>
            </div>
        {% endif %}
    </div>    
</div>


{% endblock %}

