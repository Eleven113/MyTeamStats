{% extends "layout.html.twig" %}

{% block head %}
    <title>Créér un compte - MyTeamStats</title>
{% endblock %}

{% block content %}

<div id="createuser_form" class="d-flex flex-column justify-content-center align-items-center">
    <form id="createuser-form" class="col-lg-6" action="index.php?action=adduser"  method="post">
        <legend>Connexion</legend>
        <div class="form-group">
            <label for="text">Nom</label>
            <input id="text" type="text" name="lastname" class="form-control">
        </div>
        <div class="form-group">
            <label for="text">Prénom</label>
            <input id="text" type="text" name="firstname" class="form-control">
        </div>
        <div class="form-group">
            <label for="text"><i class="fas fa-at"></i>&nbsp;&nbsp;Adresse mail</label>
            <input id="text" type="text" name="mail" class="form-control">        
        </div>
        <div class="form-group">
            <label for="text"><i class="fas fa-key"></i>&nbsp;&nbsp;Entrer un mot de passe</label>
            <input id="text" type="text" name="pwd1" class="form-control">
        </div>
        <div class="form-group">
            <label for="text"><i class="fas fa-key"></i>&nbsp;&nbsp;Confirmer le mot de passe</label>
            <input id="text" type="text" name="pwd2" class="form-control">
        </div>    
        <button type="submit" class="btn btn-primary"><i class="fas fa-check-circle"></i>&nbsp;&nbsp;Envoyer</button>
    </form>
</div>


{% endblock %}