{% extends "layout.html.twig" %}

{% block head %}
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta property="og:title" content="MyTeamStats" />
    <meta property="og:type" content="Website" />
    <meta property="og:url" content="http://www.thibaut-minard.fr/MyTeamStats/CreateUser" />
    <meta property="og:image" content="https://res.cloudinary.com/marthyte/image/upload/v1584623500/v2_vnydsk.png" />
    <meta property="og:description" content="Créer un compte utilisateur">
    <title>Créér un compte - MyTeamStats</title>
{% endblock %}

{% block content %}

<div id="createuser_form" class="d-flex flex-column justify-content-center align-items-center mt-2">
    <form id="createuser-form" class="col-lg-6" action="/MyTeamStats/AddUser"  method="post">
        <legend>Créer votre compte</legend>
        <div class="form-group">
            <label for="text">Nom</label>
            <input id="text" type="text" name="lastname" class="form-control" required>
        </div>
        <div class="form-group">
            <label for="text">Prénom</label>
            <input id="text" type="text" name="firstname" class="form-control" required>
        </div>
        <div class="form-group">
            <label for="text"><i class="fas fa-at"></i>&nbsp;&nbsp;Adresse mail</label>
            <input id="text" type="text" name="mail" class="form-control" required>
        </div>
        <div class="form-group">
            <label for="text"><i class="fas fa-key"></i>&nbsp;&nbsp;Entrer un mot de passe</label>
            <input id="text" type="password" name="pwd1" class="form-control" required>
        </div>
        <div class="form-group">
            <label for="text"><i class="fas fa-key"></i>&nbsp;&nbsp;Confirmer le mot de passe</label>
            <input id="text" type="password" name="pwd2" class="form-control" required>
        </div>    
        <button type="submit" class="btn btn-primary"><i class="fas fa-check-circle"></i>&nbsp;&nbsp;Envoyer</button>
    </form>
</div>


{% endblock %}

{% block script %}
    <script src="/MyTeamStats/public/js/PasswordCheck.js"></script>
    <script src="/MyTeamStats/public/js/CreateUser.js"></script>
{% endblock %}