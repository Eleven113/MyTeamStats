{% extends "layout.html.twig" %}

{% block head %}
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta property="og:title" content="MyTeamStats" />
    <meta property="og:type" content="Website" />
    <meta property="og:url" content="http://www.thibaut-minard.fr/MyTeamStats/Login" />
    <meta property="og:image" content="https://res.cloudinary.com/marthyte/image/upload/v1584623500/v2_vnydsk.png" />
    <meta property="og:description" content="Connexion utilisateur">
    <title>Accueil - MyTeamStats</title>
{% endblock %}

{% block content %}

<div id="login_form" class="d-flex flex-column justify-content-center align-items-center">
    <div id="login-create">Première connexion ? <a href="/MyTeamStats/CreateUser">Créér un compte</a></div>
    <form id="login-form" class="col-lg-6" action="/MyTeamStats/UserLogin" method="post">
        <legend>Connexion</legend>
        <div class="form-group">
            <label for="text"><i class="fas fa-at"></i>&nbsp;&nbsp;Adresse mail</label>
            <input id="login_user" type="text" name="mail" class="form-control" required>
        </div>
        <div class="form-group">
            <label for="text"><i class="fas fa-key"></i>&nbsp;&nbsp;Mot de passe</label>
            <input id="login_pwd" type="password" name="pwd" class="form-control" required>
        </div>    
        <button type="submit" class="btn btn-primary"><i class="fas fa-check-circle"></i>&nbsp;&nbsp;Envoyer</button>
    </form>
    <div id="login-create"><a href="/MyTeamStats/LostPassword">Mot de passe oublié ?</a></div>
</div>


{% endblock %}

