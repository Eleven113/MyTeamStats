{% extends "layout.html.twig" %}

{% block head %}
    <title>Match - MyTeamStats</title>
{% endblock %}

{% block content %}

    <div id="match_data">
        <div id="matchid">{{ match.gameid }}</div>
        <div id="athome">{{ match.athome }}</div>
        <div id="periodnum">{{ match.periodnum }}</div>
        <div id="periodduration">{{ match.periodduration }}</div>
        <div id="page">sheet</div>
    </div>

<div id="match" class="d-flex flex-column col-12 align-items-center">

    <h1>{{ match.type }} - {{ match.category }}</h1>
    <h5 id="match_date">{{ match.date | date('\\L\\e d/m/Y à H\\hi')  }}</h5>

    <div id="match_teams" class="d-flex flex-row justify-content-center">
        <div id="match_team_home" class="d-flex flex-column align-items-end justify-content-center col-4">
            <div id ="match_team_home-logo" class="col-5">
                {% if match.athome == 1 %}
                    <img src="https://res.cloudinary.com/marthyte/image/upload/v1584623500/v2_vnydsk.png" class="img-responsive fit-image">
                {% else %}
                <img src="{{ match.logo }}" class="img-responsive fit-image">
                {% endif %}
            </div>
            <div id ="match_team_home-name">
                {%  if match.athome == 1 %}
                    Lavalloise Football Cub
                {% else %}
                    {{ match.oppo }}
                {% endif %}
            </div>
        </div>
        {% if match.status == 0 %}
            <div id="match_score" class="col-4 d-flex flex-column justify-content-center items-align-center font-weight-bold">
                <div class="text-center"><span id="homescore"></span>-<span id="awayscore"></span></div>
            </div>
        {% endif %}
        <div id="match_team_away" class="d-flex flex-column align-items-start justify-content-center col-4">
            <div id ="match_team_away-logo" class="col-5">
                {% if match.athome == 0 %}
                    <img src="https://res.cloudinary.com/marthyte/image/upload/v1584623500/v2_vnydsk.png" class="img-responsive fit-image">
                {% else %}
                    <img src="{{ match.logo }}" class="img-responsive fit-image">
                {% endif %}
            </div>
            <div id ="match_team_away-name">
                {%  if match.athome == 0 %}
                    Lavalloise Football Cub
                {% else %}
                    {{ match.oppo }}
                {% endif %}
            </div>
        </div>
    </div>

    {% if match.status == 1 %}
        <div id="match_infos"  class="m-4 p-4 col-8 border border-primary rounded-lg myborder">
            <p id="match_address">
                <span class="player_data-title font-weight-bold">Terrain :&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</span>
                <span class="player_data-txt">{{ match.address }} à {{ match.city }} ({{ match.zipcode }})</span>
            </p>
            <p id="match_field">
                <span class="player_data-title font-weight-bold">Pelouse :&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</span>
                <span class="player_data-txt">{{ match.turf }}</span>
            </p>
        </div>

        <div id="pre_match">
            <div id="pre_match_data" class="m-4 p-4 col-12 border border-primary rounded-lg myborder">
                <div class="meteo_zipcode">{{ match.zipcode }}</div>
                <div class="meteo_date">{{ match.date }}</div>
                <p id="match_meteo">
                    <span class="player_data-title font-weight-bold">Prévision météo :&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</span>
                    <span class="meteo_display"></span>
                </p>
            </div>
            {% if playersList is null %}

                <div id="no_compo">
                    Il n'y a pas encore de composition d'équipe pour ce match
                </div>
            {% else %}
                <div id="match_player" class="m-4 p-4 col-8 border border-primary rounded-lg myborder">
                    <div id="match_player-title">Joueurs convoqués</div>
                    <ul>
                        {%  for player in playersList %}
                            <li>{{ player.firstname }}  {{ player.lastname }}</li>
                        {% endfor %}
                    </ul>
                </div>
            {% endif %}
        </div>
    {%  else %}

        <div id="match_goal_card_display" class="col-12 mt-3 mb-3 d-flex flex-row">
            <div id="match_goal_display" class="col-6 d-flex flex-column justify-content-center">

            </div>
            <div id="match_card_display" class="col-6 d-flex flex-column justify-content-center">

            </div>
        </div>

        <div id="match_stat_period_display" class="mt-2">
            <div id="match_stat_period-bar" class="border border-primary rounded"></div>
        </div>

    {%  endif %}

</div>


{% endblock %}

{%  block script %}
    <script>
        let player = {{ players | raw }};
        let card = {{ cards | raw }};
        let goal = {{ goals | raw }};
        let period = {{ periods | raw }};
    </script>
    <script src="/MyTeamStats/public/js/ajax.js"></script>
    <script src="/MyTeamStats/public/js/Score.js"></script>
    <script src="/MyTeamStats/public/js/Card.js"></script>
    <script src="/MyTeamStats/public/js/Stats.js"></script>
    <script src="/MyTeamStats/public/js/Chrono.js"></script>
    <script src="/MyTeamStats/public/js/Match.js"></script>
{% endblock %}