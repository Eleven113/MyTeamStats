{% extends "layout.html.twig" %}

{% block head %}
    <title>Modifier votre mot de passe - MyTeamStats</title>
{% endblock %}

{% block content %}

    <div id="createuser_form" class="d-flex flex-column justify-content-center align-items-center">
        <form id="Modifypwd-form" class="col-lg-6" action="/MyTeamStats/ModifyPassword/{{ mail }}/{{ token }}"  method="post">
            <legend>Cr√©er un nouveau mot de passe</legend>
