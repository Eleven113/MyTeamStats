{% extends "layout.html.twig" %}

{% block head %}
    <title>Liste des matchs - MyTeamStats</title>
{% endblock %}

{% block content %}

    {% if session.user_status >= 3 %}
        <button id="add_match" class="btn btn-primary mt-4 add-btn">
            <a href="/MyTeamStats/CreateMatch" class="link font-weight-bold">
                <i class="far fa-futbol"></i>&nbsp;&nbsp;&nbsp;Créer un match
            </a>
        </button>
    {% endif %}

<div class="table-responsive">
    <table class="table table table-bordered table-striped text-center table-text-size">
        <caption class="text-center">
            <h4>Liste des Matchs</h4>
        </caption>
        <thead>
            <tr>
                <th id="table_matchcategory">Catégorie</th>
                <th id="table_matchopponent">Adversaire</th>
                <th id="table_matchplace">Lieu</th>
                <th id="table_matchdate">Date</th>
                <th id="table_match">Résultat</th>
                <th id="table_match">Options</th>
            </tr>
        </thead>
        <tbody>
            {% for match in matchs %}
                <tr>
                    <td>{{ match.category }}</td>
                    <td>{{ match.oppo }}</td>
                    <td>
                        {% if match.athome == 1  %}
                            Domicile
                        {% else %}
                            Extérieur
                        {% endif %}
                    </td>
                    <th>{{ match.date | date('d/m/Y à H:i' )}}</td>
                    <td>
                        {%  if match.status == 1 %}
                            A venir
                        {%  else %}
                            {{ match.homescore }} - {{ match.awayscore }}
                        {% endif %}
                    </td>
                    <td class="d-flex flex-row justify-content-between">
                        <div><a href="/MyTeamStats/Match/{{ match.gameid }}"><i class="far fa-futbol"></i></a></div>
                        {% if ( session.user_status ) >= 3 and   ( match.status == 1 )  %}
                            <div><a href="/MyTeamStats/Composition/{{ match.gameid }}"><i class="fas fa-users"></i></a></div>
                            <div><a href="/MyTeamStats/MatchStats/{{ match.gameid }}"><i class="fas fa-clipboard-list"></i></a></div>
                        {% endif %}
                        {% if session.user_status >= 4 %}
                            <div><a href="/MyTeamStats/DeleteMatch/{{ match.gameid }}"><i class="fas fa-trash-alt"></i></a></div>
                        {% endif %}
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>    

{% endblock %}

